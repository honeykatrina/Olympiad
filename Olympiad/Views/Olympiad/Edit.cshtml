@model Olympiad.Models.OlympiadViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Редактирование олимпиады</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.OlympiadID)
                @Html.ValidationMessageFor(model => model.OlympiadID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OlympiadName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OlympiadName)
                @Html.ValidationMessageFor(model => model.OlympiadName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OlympiadLevel, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OlympiadLevel)
                @Html.ValidationMessageFor(model => model.OlympiadLevel)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OlympiadStartDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OlympiadStartDate, new { Value = Model.OlympiadStartDate.ToString("dd-MM-yyyy"), @class = "date-picker" })
                @Html.ValidationMessageFor(model => model.OlympiadStartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OlympiadEndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OlympiadEndDate, new { Value = Model.OlympiadEndDate.ToString("dd-MM-yyyy"), @class = "date-picker" })
                @Html.ValidationMessageFor(model => model.OlympiadEndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OlympiadDirection, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OlympiadDirection)
                @Html.ValidationMessageFor(model => model.OlympiadDirection)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OlympiadType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OlympiadType)
                @Html.ValidationMessageFor(model => model.OlympiadType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UniversityID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UniversityID, new SelectList(ViewBag.Universities, "Value", "Text", 1))
                @Html.ValidationMessageFor(model => model.University.UniversityName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".date-picker").datepicker({
                dateFormat: 'dd-MM-yy'
            });

        });

    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
