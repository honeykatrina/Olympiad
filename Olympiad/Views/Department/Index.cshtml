@model IEnumerable<Olympiad.Models.DepartmentViewModel>

@{
    ViewBag.Title = "Кафедры";
}

<h4>@ViewBag.Title</h4>

<p>
    @Html.ActionLink("Добавить новую", "Create")
</p>
<table class="table">
    <tr>
        <th class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayNameFor(model => model.DepartmentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayFor(modelItem => item.DepartmentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.DepartmentID}) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.DepartmentID })
        </td>
    </tr>
}

</table>
