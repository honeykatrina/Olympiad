@model IEnumerable<Olympiad.Models.TeamViewModel>

@{
    ViewBag.Title = "Команды";
}

<h4>@ViewBag.Title</h4>

<p>
    @Html.ActionLink("Добавить новую", "Create")
</p>
<table class="table">
    <tr>
        <th class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayNameFor(model => model.TeamID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayFor(modelItem => item.TeamID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.TeamID}) |
            
            @Html.ActionLink("Удалить", "Delete", new { id = item.TeamID })
        </td>
    </tr>
}

</table>
