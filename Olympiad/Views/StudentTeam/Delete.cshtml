@model Olympiad.Models.StudentTeamViewModel

@{
    ViewBag.Title = "Удаление члена команды";
}

<h3>Вы уверены, что хотите удалить члена команды?</h3>
<div>
    <h4>Удалить члена команды</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayNameFor(model => model.StudentTeamID)
        </dt>

        <dd class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayFor(model => model.StudentTeamID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>

        <dd>
            @ViewBag.Team
        </dd>

        <dt>
            @Html.Label("Студент")
        </dt>

        <dd>
            @ViewBag.Student
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад к списку", "Index")
        </div>
    }
</div>
