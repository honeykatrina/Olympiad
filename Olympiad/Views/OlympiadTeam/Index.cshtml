@model IEnumerable<Olympiad.Models.OlympiadTeamViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayNameFor(model => model.OlympiadTeamID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OlympiadID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamID)
