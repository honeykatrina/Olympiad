@model IEnumerable<Olympiad.Areas.Admin.Models.StudentTeamViewModel>

@{
    ViewBag.Title = "Составы команд";
}

<h4>@ViewBag.Title</h4>

<p>
    @Html.ActionLink("Добавить нового члена", "Create")
</p>
<table class="table">
    <tr>
        <th class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayNameFor(model => model.StudentTeamID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </th>
        <th>
            @Html.Label("Студент")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="hidden-xs hidden-sm hidden-md hidden-lg">
            @Html.DisplayFor(modelItem => item.StudentTeamID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentSurname)
            @Html.DisplayFor(modelItem => item.Student.StudentName)
        </td>
        <td>
            
            @Html.ActionLink("Удалить", "Delete", new { id = item.StudentTeamID })
        </td>
    </tr>
}

</table>
